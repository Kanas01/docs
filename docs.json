            "pages": [
              "index",
              "quickstart",
              "interface"
            ]
          },
          {
            "group": "核心功能",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "Writing content",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "使用案例",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "use-case/introduction"
            ]
          },
          {
            "group": "Endpoint examples",
            "pages": [
              "use-case/endpoint/get",
              "use-case/endpoint/create",
              "use-case/endpoint/delete",
              "use-case/endpoint/webhook"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "下载Nody",
          "href": "https://pan.quark.cn/s/77d303048e19#/list/share",
