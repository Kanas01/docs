{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Nody",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "fonts": {
    "family": "Noto Sans Simplified Chinese"
  },
  "favicon": "/favicon.png",
  "navigation": {
    "tabs": [
      {
        "tab": "指南",
        "groups": [
